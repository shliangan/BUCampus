<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shliangan.shnliang.bucampus.Description"
    android:id="@+id/description"
    android:background="#7CB9E8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descritption"
        android:id="@+id/text_description"
        android:textSize="30dp"
        android:layout_below="@+id/button_back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Building"
        android:id="@+id/text_building"
        android:layout_below="@+id/text_description"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="address"
        android:id="@+id/text_address"
        android:autoText="false"
        android:textSize="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#F2F3F4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maps"
        android:id="@+id/button_maps"
        android:layout_alignBottom="@+id/button_back"
        android:layout_alignParentEnd="true"
        android:background="#F2F3F4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Marker"
        android:id="@+id/button_marker"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#F2F3F4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address:"
        android:id="@+id/textView"
        android:layout_below="@+id/text_building"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/button_marker"
        android:layout_centerHorizontal="true">

        <ToggleButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/MButton"
            android:textOff="M"
            android:textOn="M"
            android:checked="false" />

        <ToggleButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="New ToggleButton"
            android:textOff="Tu"
            android:textOn="Tu"
            android:id="@+id/TuButton"
            android:checked="false" />

        <ToggleButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="New ToggleButton"
            android:textOff="W"
            android:textOn="W"
            android:id="@+id/WButton" />

        <ToggleButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="New ToggleButton"
            android:textOff="Th"
            android:textOn="Th"
            android:id="@+id/ThButton"
            android:checked="false" />

        <ToggleButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="New ToggleButton"
            android:textOff="F"
            android:textOn="F"
            android:id="@+id/FButton" />

        <ToggleButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="New ToggleButton"
            android:textOff="Sa"
            android:textOn="Sa"
            android:id="@+id/SatButton" />

        <ToggleButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="New ToggleButton"
            android:textOff="Su"
            android:textOn="Su"
            android:id="@+id/SunButton" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/buttonReset"
        android:layout_alignBottom="@+id/button_back"
        android:layout_centerHorizontal="true"
        android:background="#F2F3F4" />

</RelativeLayout>
